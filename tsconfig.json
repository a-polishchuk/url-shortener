{
    "compilerOptions": {
        "target": "ES6", // Target modern JavaScript
        "module": "commonjs", // CommonJS for Node.js
        "outDir": "./dist", // Output directory for compiled files
        "rootDir": "./src", // Root directory of TypeScript source files
        "strict": true, // Enable strict type-checking
        "esModuleInterop": true, // Allows default imports from modules with no default export
        "skipLibCheck": true, // Skips type checking of declaration files
        "forceConsistentCasingInFileNames": true // Disallow inconsistently-cased references to the same file
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}